<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unknown.gaelan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PlaylistMiner"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            // An intent filter that will receive the response from the authentication service
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="gb-unknown" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/title_activity_search_results" />
        <activity
            android:name=".PlaylistDetailsActivity"
            android:label="@string/title_activity_playlist_details" />

        <service
            android:name=".PlaylistsParserService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>
