<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unknown.gaelan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.unknown.gaelan.PlaylistMiner"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.unknown.gaelan.DrawerActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="gb-unknown" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.unknown.gaelan.SearchResultsActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.unknown.gaelan.PlaylistDetailsActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.unknown.gaelan.SettingsActivity"
            android:label="@string/app_name" />

        <service
            android:name="com.unknown.gaelan.PlaylistsParserService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>
